{
    "name": "testmonitor/asana-client",
    "description": "The TestMonitor Asana Client.",
    "type": "library",
    "keywords": ["testmonitor", "asana", "client"],
    "authors": [
        {
            "name": "Thijs Kok",
            "email": "tkok@testmonitor.com",
            "homepage": "https://www.testmonitor.com/",
            "role": "Lead Developer"
        },
        {
            "name": "Stephan Grootveld",
            "email": "sgrootveld@testmonitor.com",
            "homepage": "https://www.testmonitor.com/",
            "role": "Developer"
        },
        {
            "name": "Frank Keulen",
            "email": "fkeulen@testmonitor.com",
            "homepage": "https://www.testmonitor.com/",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-fileinfo": "*",
        "guzzlehttp/guzzle": "^7.3",
        "league/oauth2-client": "^2.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "mockery/mockery": "~1.5",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "scrutinizer/ocular": "^1.9"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "TestMonitor\\Asana\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestMonitor\\Asana\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "prefer-stable": true,
    "license": "MIT"
}
